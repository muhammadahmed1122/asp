@model IEnumerable<WebApplication4.Models.product>

<h2>SEARCH</h2>
@using (Html.BeginForm("SHOW","home", FormMethod.Get))
{
    @Html.TextBox("searching")<input type="submit" value="search" />
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>address</th>
            <th>decs</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:aqua">
                    no match any doc
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.name</td>
                    <td>@item.address</td>
                    <td>@item.decs</td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Details", "detl", new { id = item.id }) |
                        @Html.ActionLink("Delete", "det", new { id = item.id })
                    </td>
                    
                </tr>
            }

        }
    </tbody>
</table>


<p>
    <button class="btn btn-info" type="button" id="addressSearch"
            onclick="location.href='@Url.Action("home", "home")'">NEW</button></p>
